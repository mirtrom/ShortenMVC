@model UrlModel

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<div class="col-12">
				<h1 class="text-center">Delete Product</h1>
			</div>
			<div class="form-group">
				<label asp-for="OriginalUrl"></label>
				<input asp-for="OriginalUrl" disabled class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="ShortUrl"></label>
				<input asp-for="ShortUrl" disabled class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Clicks"></label>
				<input asp-for="Clicks" disabled class="form-control" />
			</div>
			<div class="form-group mb-3">
				<label asp-for="CreatedAt"></label>
				<input asp-for="CreatedAt" disabled class="form-control" />
			</div>
			<div class="row">
				<div class="col-6">
					<button type="submit" class="btn btn-danger form-control">Delete</button>
				</div>
				<div class="col-6">
					<a asp-controller="UrlManagement" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
				</div>
			</div>
		</div>
</form>